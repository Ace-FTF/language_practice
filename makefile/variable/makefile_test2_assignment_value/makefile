###################    （1）验证 :=     ##########################
x:=First_
y:=$(x)lsy
echo_xy_1:
	@echo "111111111111111111"
	@echo "x1=$(x)"
	@echo "y1=$(y)"

x:=Last_
echo_xy_2:
	@echo "222222222222222222"
	@echo "x2=$(x)"
	@echo "y2=$(y)"

###################   （2） 验证 ?=     ##########################
#a=
a?=First_
b?=$(a)lsb
echo_ab_1:
	@echo "333333333333333333"
	@echo "a1=$(a)"
	@echo "b1=$(b)"

a?=Last_
echo_ab_2:
	@echo "444444444444444444"
	@echo "a2=$(a)"
	@echo "b2=$(b)"

###################   （3） 验证 +=     ##########################
c=
c+=123
c+=456
echo_c:
	@echo "55555555555555555555"
	@echo "c=$(c)"

